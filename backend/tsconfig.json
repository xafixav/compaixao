{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,                     
    "outDir": "./public",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "paths": {
      "*": ["./node_modules/*"]
    },
    "types": [
      "jest",
      "mocha",
      "node"
    ],
    "esModuleInterop": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["src/tests"]
}